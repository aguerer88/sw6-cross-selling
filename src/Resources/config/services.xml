<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
               https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false"/>

        <service id="CrossSelling\Core\Content\CrossSellingGroup\CrossSellingGroupDefinition" public="true" />

        <service id="CrossSelling\Subscriber\ProductPageSubscriber" public="true">
            <argument type="service" id="cross_selling_product_group.repository"/>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
